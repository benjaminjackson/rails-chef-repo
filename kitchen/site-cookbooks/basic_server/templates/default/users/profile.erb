# Execute profile scripts

if [ -f "$HOME/.profile.d/user.sh" ]; then
    . "$HOME/.profile.d/user.sh"
fi

if [ -d "$HOME/.profile.d/chef" ]; then
  for i in "$HOME/.profile.d/chef/*.sh"; do
    if [ -r $i ]; then
      . $i
    fi
  done
  unset i
fi

# set prompt: ``username@hostname:/directory $ ''
PS1="[\u@\e[1;91m\]\H\[\e[0m\]:\w] " 
case `id -u` in
      0) PS1="${PS1}# ";;
      *) PS1="${PS1}$ ";;
esac
